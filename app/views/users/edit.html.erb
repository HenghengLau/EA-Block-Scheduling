<h2>Editing <%= @user.email %></h2>
<%= form_with model: @user, local: true do |f| %>
  <%= f.label :email, "Email", class: 'col-form-label' %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :first_name, 'First Name', class: 'col-form-label' %>
  <%= f.text_field :first_name, class: 'form-control' %>

  <%= f.label :last_name, 'Last Name', class: 'col-form-label' %>
  <%= f.text_field :last_name, class: 'form-control' %>

  <% if current_user.admin? %>
    <%= f.label :role, 'User Role', class: 'col-form-label' %>
    <%= f.select :role, [['Admin', 'admin'], ['Student', 'student']], {}, class: 'form-control' %>
  <% end %>

  <br />
  <%= f.submit 'Update User', class: 'btn btn--primary-alt' %>
  <%= link_to 'Cancel', users_path, class: 'btn btn--primary-alt' %>
<% end %>

