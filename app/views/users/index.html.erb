<h2>Users</h2>
<br>
<h3>Add New Users</h3>

<div class="upload-container">
  <div class="left-section">
    <button class="btn btn--primary">Import From Spreadsheet</button>
    <span class="file-path">C:/Directory/spreadsheet.xlsx</span>
  </div>
  <div class="right-section">
    <span>Select a .xlsx to upload</span>
    <div class="button-group">
      <button class="button button-secondary">Cancel</button>
      <button class="button">Submit</button>
    </div>
  </div>
</div>
<br>
<h3>Existing Users</h3>
<table class="table">
  <thead>
  <tr>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Role</th>
    <th>UID</th>
    <th>Provider</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.role %></td>
    <td><%= user.uid %></td>
    <td><%= user.provider %></td>
    <td>
      <%= link_to edit_user_path(user.id) do %>
        <i class="bi bi-pencil"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>