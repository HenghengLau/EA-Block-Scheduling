<h1>Create New Typical Block</h1>

<%= form_with(model: @typical_block, url: "create_typical_block_blocks_path", local: true) do |form| %>
  <% if @typical_block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@typical_block.errors.count, "error") %> prohibited this block from being saved:</h2>
      <ul>
        <% @typical_block.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :classes %>
    <%= form.collection_check_boxes :class_ids, @classes, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Create Typical Block" %>
  </div>
<% end %>
